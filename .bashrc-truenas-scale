#  ____, ____,
# (-|  \(-|  \
#  _|__/ _|__/ - TrueNAS Scale
# Devin Dwight's bash config...
# ...a combination of bits of pieces of others' configs, including the kali prompt.
# modified: 23-07-18

# if not running interactively, don't do anything
[[ $- != *i* ]] && return

#### HISTORY MGMT ####
export HISTCONTROL=ignoredups:erasedups	# no duplicate entries
shopt -s histappend  # do not overwrite history (appends)
HISTSIZE=100000
HISTFILESIZE=10000000

####  ALIASES  ####
alias ls='ls -alhGF --color=auto'
alias cls='clear'
shopt -s checkwinsize # checks term size when bash regains control


#### PROMPT HANDLING ####
force_color_prompt=yes

if [ -n "$force_color_prompt" ]; then
    if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
	color_prompt=yes
    else
	color_prompt=
    fi
fi

if [ "$color_prompt" = yes ]; then
    prompt_color='\[\033[;32m\]'
    info_color='\[\033[1;34m\]'
    prompt_symbol=" @ "
    if [ "$EUID" -eq 0 ]; then # Change prompt colors for root user
	prompt_color='\[\033[;94m\]'
	info_color='\[\033[1;31m\]'
	prompt_symbol=ðŸ’€
    fi
    PS1=$prompt_color'â”Œâ”€â”€${debian_chroot:+($debian_chroot)â”€â”€}('$info_color'\u${prompt_symbol}\h'$prompt_color')-[\[\033[0;1m\]\w'$prompt_color']\n'$prompt_color'â””â”€'$info_color'\$\[\033[0m\] '   
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt force_color_prompt

# If this is an xterm set the title to user@host:dir
case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
    ;;
*)
    ;;
esac

if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
    alias diff='diff --color=auto'
    alias ip='ip --color=auto'

    export LESS_TERMCAP_mb=$'\E[1;31m'     # begin blink
    export LESS_TERMCAP_md=$'\E[1;36m'     # begin bold
    export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
    export LESS_TERMCAP_so=$'\E[01;33m'    # begin reverse video
    export LESS_TERMCAP_se=$'\E[0m'        # reset reverse video
    export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
    export LESS_TERMCAP_ue=$'\E[0m'        # reset underline
fi
